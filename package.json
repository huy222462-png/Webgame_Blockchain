{
  "name": "blockchain-game-platform",
  "version": "1.0.0",
  "description": "Blockchain gaming platform with Tai Xiu and Fishing games",
  "private": true,
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "compile": "npx hardhat compile",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "deploy:all": "npx hardhat run scripts/deploy-all.js",
    "deploy:all:hera": "npx hardhat run scripts/deploy-all.js --network hera",
    "verify:deployment": "npx hardhat run scripts/verify-deployment.js",
    "node": "npx hardhat node",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "frontend": "cd frontend && npm run dev",
    "admin": "cd frontend-admin && npm run dev"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "ethers": "^6.16.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.2",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^24.10.1",
    "chai": "^4.3.7",
    "hardhat": "^2.28.0",
    "hardhat-gas-reporter": "^2.3.0",
    "nodemon": "^2.0.22",
    "solidity-coverage": "^0.8.17",
    "typechain": "^8.3.2"
  }
}
