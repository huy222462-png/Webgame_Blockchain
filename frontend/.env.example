# ================================
# Frontend Environment Variables
# ================================
# 
# Rename this file to .env in the frontend directory
# These variables are exposed to the browser (safe for public)

# ================================
# BACKEND API
# ================================

# Backend API URL
VITE_API_URL=http://localhost:5000

# ================================
# SMART CONTRACT ADDRESSES
# ================================

# Local Development (Hardhat)
VITE_TAIXIU_CONTRACT=
VITE_FISHING_CONTRACT=

# Sepolia Testnet
VITE_TAIXIU_CONTRACT_SEPOLIA=
VITE_FISHING_CONTRACT_SEPOLIA=

# Mainnet (Production)
VITE_TAIXIU_CONTRACT_MAINNET=
VITE_FISHING_CONTRACT_MAINNET=

# ================================
# NETWORK CONFIGURATION
# ================================

# Default Network (localhost, sepolia, mainnet)
VITE_DEFAULT_NETWORK=localhost

# ================================
# OPTIONAL FEATURES
# ================================

# Enable analytics
VITE_ENABLE_ANALYTICS=false

# Google Analytics ID
VITE_GA_ID=

# Enable debug mode
VITE_DEBUG=true

# ================================
# NOTES
# ================================
#
# 1. After deploying contracts, update contract addresses above
# 2. VITE_ prefix is required for Vite to expose variables to browser
# 3. Never store private keys or secrets here
# 4. These values are visible in the browser
