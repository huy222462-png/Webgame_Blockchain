# ================================
# SERVER CONFIGURATION
# ================================

PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ================================
# AUTHENTICATION
# ================================

# JWT Secret Key (change to a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-random-string

# ================================
# BLOCKCHAIN CONFIGURATION
# ================================

# ⚠️ CRITICAL: Private Key for Contract Deployment
# NEVER commit real private key to git!
# This should be the private key of an account with ETH for gas fees
PRIVATE_KEY=your-private-key-here-without-0x-prefix

